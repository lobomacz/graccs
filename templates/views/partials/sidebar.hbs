<!-- Sidebar -->
<aside id="sidebar-wrapper">
    <div class="sidebar-content">
        <div class="sidebar-toggle-container hidden-xs">
            <div class="nav-hamburger">
                <button type="button" class="sidebar-toggle" data-action="toggle" data-target="body" data-toggle="menu-visible">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
        <form action="/buscar" method="get" class="visible-xs">
            <div class="input-group">
                <input name="query" class="form-control" type="text" placeholder="Buscar" required />
                <span class="input-group-addon"><button class="si si-magnifier"></button></span>
            </div>
        </form>
        <ul class="sidebar-nav">
			{{#if indSector}}
				{{#each indSector}}
                    <li>
						{{#if icono.filename}}
                            <span>
								<i class="si"></i>
								<span style="padding: 9px 9px;
										background: url('/indicators/icons/{{icono.filename}}') no-repeat 50% 50%;
										background-size: 18px 18px;"></span>
							</span>
                            <a href="/indicadores/{{id}}">{{name}}</a>
						{{else}}
                            <span>
								<i class="si"></i>
								<span style="padding: 9px 9px;
                                        background: url('/indicators/icons/default-sector.png') no-repeat 50% 50%;
                                        background-size: 18px 18px;"></span>
							</span>
                            <a href="/indicadores/{{id}}">{{name}}</a>
						{{/if}}
                    </li>
				{{/each}}
			{{/if}}
        </ul>
        <a class="visible-xs menu-contact" href="/contacto"><i class="si si-envelope"></i>CONTACTO</a>
    </div>
</aside>
<!-- /#sidebar-wrapper -->
