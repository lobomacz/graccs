{{#if posts.results}}
	{{#each posts.results}}
		{{#ifeq @index 0}}
            <li data-url="/noticia/{{slug}}" class="grid-news-cover cover-promoted" style="background-image: url('/posts/files/{{relatedImage.filename}}')"></li>
            <li class="grid-news-content grid-promoted">
                <div class="set-top">
                    <a href="/noticia/{{slug}}" class="item-meta-title hidden-xs" title="{{title}}">
                        <h2>{{title}}</h2>
                    </a>
                    <h2 class="item-meta-title visible-xs">
                        <a href="/noticia/{{slug}}">{{title}}</a>
                    </h2>
                </div>
                <div class="set-bottom">
                    <div class="item-meta-desc hidden-xxs">
						{{#substring 150 content.brief}}{{/substring}}
                        <a href="/noticia/{{slug}}" style="color: #D65B00; font-size: 12px; text-decoration: underline;">Leer más</a>
					</div>
                    <div class="item-meta-info">
                        <span>{{date startDate format='DD MMM YYYY HH:MM'}}</span>
                        <span class="meta-separator">|</span>
                        <i class="si si-bubble"></i>
						<span class="meta-comments-count">
							{{#ifeq commentsCount 0}}
                                No tiene
							{{else}}
								{{commentsCount}}
							{{/ifeq}}
						</span>
                    </div>
                </div>
            </li>
		{{else}}
            <li data-url="/noticia/{{slug}}" class="grid-news-cover cover-promoted" style="background-image: url('/posts/files/{{relatedImage.filename}}')"></li>
            <li class="grid-news-content grid-promoted">
                <div class="set-top">
                    <a href="/noticia/{{slug}}" class="item-meta-title hidden-xs" title="{{title}}">
                        <h2>{{title}}</h2>
                    </a>
                    <h2 class="item-meta-title visible-xs">
                        <a href="/noticia/{{slug}}" title="{{title}}">{{title}}</a>
                    </h2>
                </div>
                <div class="set-bottom">
                    <div class="item-meta-desc hidden-xxs">
						{{#substring 150 content.brief}}{{/substring}}
                        <a href="/noticia/{{slug}}" style="color: {{#ifeq @index 1}}#6479ff{{/ifeq}}{{#ifeq @index 2}}#76af25{{/ifeq}}; font-size: 12px; text-decoration: underline;">Leer más</a>
					</div>
                    <div class="item-meta-info">
                        <span>{{date startDate format='DD MMM YYYY HH:MM'}}</span>
                        <span class="meta-separator">|</span>
                        <i class="si si-bubble"></i>
						<span class="meta-comments-count">
							{{#ifeq commentsCount 0}}
                                No tiene
							{{else}}
								{{commentsCount}}
							{{/ifeq}}
                        </span>
                    </div>
                </div>
            </li>
		{{/ifeq}}
	{{/each}}
{{/if}}
