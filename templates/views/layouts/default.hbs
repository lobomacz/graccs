	{{#if isIndicatorDetailsSection}}
        <script type="text/javascript">
            $(function () {
                var $types = $('#areaTypes');
                var $areas = $('#areas');
				var $departments = $('#departments');
                var $municipalities = $('#municipalities');
                var $communities = $('#communities');

                var area = $('#area_id').text().trim();
                var areaParent = $('#area_parent_id').text().trim();

                var indicator_id = "{{indicator._id}}";
                var realValueLabel = "{{indicator.realValue}}";
                var useDenominator = {{indicator.useDenominator}};
				var targetValueLabel = useDenominator ? "{{indicator.targetValue}}" : "";
				var comparativeValue = 0;
                var metricType = "{{indicator.metrics.type}}";
				var areaType = {{indicator.areaNumber}};
                var areaTypeName = areaType === 3 ? 'community' : (areaType === 2 ? 'municipal' : (areaType === 1 ? 'department' : ''));

                $('#vote-positive-button').click(function(e) {
                    e.preventDefault();

                    var $item = $(this);
                    var id = $item.data('comment-id');

                    if (id) {
                        var req = $.ajax({
                            method: 'POST',
                            url: '/post-comment/' + id + '/vote',
                            data: {vote: 1}
                        });

                        req.done(function (res) {
                            var value = parseInt($item.find('span:first-child').text()) + 1;
                            $item.find('span:first-child').text(value);
                            $item.unbind('click');
                            console.log('Comment vote updated successfully', res);
                        });

                        req.fail(function (res) {
                            console.log('Updating comment vote has failed', res);
                        });
                    }
                });

                $('#vote-negative-button').click(function(e) {
                    e.preventDefault();

                    var $item = $(this);
                    var id = $item.data('comment-id');

                    if (id) {
                        var req = $.ajax({
                            method: 'POST',
                            url: '/post-comment/' + id + '/vote',
                            data: {vote: -1}
                        });

                        req.done(function (res) {
                            var value = parseInt($item.find('span').text()) + 1;
                            $item.find('span').text(value);
                            $item.unbind('click');
                            console.log('Comment vote updated successfully', res);
                        });

                        req.fail(function (res) {
                            console.log('Updating comment vote has failed', res);
                        });
                    }
                });

                $('#vote-indicator-positive-button').click(function(e) {
                    e.preventDefault();

                    var $item = $(this);
                    var id = $item.data('comment-id');

                    if (id) {
                        var req = $.ajax({
                            method: 'POST',
                            url: '/indicator-comment/' + id,
                            data: { vote: 1 }
                        });

                        req.done(function (res) {
                            var value = parseInt($item.find('span:first-child').text()) + 1;
                            $item.find('span:first-child').text(value);
                            $item.unbind('click');
                            console.log('Comment vote updated successfully', res);
                        });

                        req.fail(function (res) {
                            console.log('Updating comment vote has failed', res);
                        });
                    }
                });

                $('#vote-indicator-negative-button').click(function(e) {
                    e.preventDefault();

                    var $item = $(this);
                    var id = $item.data('comment-id');

                    if (id) {
                        var req = $.ajax({
                            method: 'POST',
                            url: '/indicator-comment/' + id,
                            data: { vote: -1 }
                        });

                        req.done(function (res) {
                            var value = parseInt($item.find('span').text()) + 1;
                            $item.find('span').text(value);
                            $item.unbind('click');
                            console.log('Comment vote updated successfully', res);
                        });

                        req.fail(function (res) {
                            console.log('Updating comment vote has failed', res);
                        });
                    }
                });
				
				$('.form-control.select').select2({
                    theme: "bootstrap",
                    placeholder: "-- Seleccionar --",
                    allowClear: true
                });

                $departments.change(function(e) {
                    var department = $departments.val();

                    if (department) {
                        select_department($departments.data('name'));
						
						if (areaType >= 2) {
                            $municipalities.empty();
                            select_municipality('');
                            get_municipalities(department);

							if (areaType >= 3) {
                                $communities.empty();
                                select_community('');
							}
						}
                    }
					else {
                        $municipalities.empty();
                        select_municipality('');

                        $communities.empty();
                        select_community('');
                    }
                });
				
				$municipalities.change(function(e) {
                    var municipality = $municipalities.val();

                    if (municipality) {
                        select_municipality($municipalities.data('name'));

						if (areaType >= 3) {
                            $communities.empty();
							select_community('');
                            get_communities(municipality);	
						}
                    }
					else {
                        $communities.empty();
                        select_community('');
                    }
				});

                $communities.change(function(e) {
                    var community = $communities.val();

                    if (community) {
						select_community($communities.data('name'));
                    }
                });
				
				$('#bBuildGraph').click(function(e) {
                    $('#chartdiv').empty();

                    var department = $departments.val();
                    var municipality = $municipalities.val();
					var community = $communities.val();
					
					switch (areaType) {
						case 1:
							if (department)
								get_points(indicator_id, 'department', department);
							break;
						case 2:
							if (municipality)
                            	get_points(indicator_id, 'municipality', municipality);
                            break;
						case 3:
							if (community)
								get_points(indicator_id, 'community', community);
                            break;
					}
				});

                function get_initial_data() {
                    if (indicator_id && areaTypeName != '' && area != '') {
						select_areas_value(area, areaParent);
						
                        var req = $.ajax({
                            url: '/get-initial-data',
                            data: { indicator: indicator_id, type: areaTypeName, area: area }
                        });

                        req.done(function (results) {
                            console.log('Getting initial data success', results);

                            if (results && results.points) {
								build_points(results.points);
                            }
                        });

                        req.fail(function (res) {
                            console.log('Getting initial data has failed', res);
                        });
					}
				}

                function get_municipalities(parent, municipality) {
                    if (parent) {
                        var req = $.ajax({
                            url: '/get-municipalities',
                            data: { parent: parent }
                        });

                        req.done(function (results) {
                            console.log('Getting municipalities successfully: ', results);

                            if (results && results.data) {
                                var first_time = true;
                                $municipalities.empty();

                                $.each(results.data, function (key,val)
                                {
                                    var option = '';

                                    if (municipality) {
                                        if (val._id == municipality) {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'" selected>'+ val.name +'</option>';

                                            $('#select2-municipalities-container').attr('title', val.name);
                                            $('#select2-municipalities-container').html(val.name);
                                        }
                                        else {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'">'+ val.name +'</option>';
                                        }
                                    }
                                    else {
                                        if (first_time) {
                                            first_time = false;
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'" selected>'+ val.name +'</option>';

                                            $('#select2-municipalities-container').attr('title', val.name);
                                            $('#select2-municipalities-container').html(val.name);
                                        }
                                        else {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'">'+ val.name +'</option>';
                                        }
                                    }

                                    $municipalities.append(option);
                                });
                            }
                        });

                        req.fail(function (res) {
                            console.log('Getting municipalities has failed', res);
                        });
                    }
                }

                function get_municipality(municipality) {
                    if (municipality) {
                        var req = $.ajax({
                            url: '/get-municipality',
                            data: { id: municipality }
                        });

                        req.done(function (results) {
                            console.log('Getting municipality successfully: ', results);

                            if (results && results.related_municipal_areas) {
                                var first_time = true;
                                $municipalities.empty();

                                $.each(results.related_municipal_areas, function (key,val)
                                {
                                    var option = '';

                                    if (municipality) {
                                        if (val._id == municipality) {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'" selected>'+ val.name +'</option>';

                                            $('#select2-municipalities-container').attr('title', val.name);
                                            $('#select2-municipalities-container').html(val.name);
                                        }
                                        else {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'">'+ val.name +'</option>';
                                        }
                                    }
                                    else {
                                        if (first_time) {
                                            first_time = false;
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'" selected>'+ val.name +'</option>';

                                            $('#select2-municipalities-container').attr('title', val.name);
                                            $('#select2-municipalities-container').html(val.name);
                                        }
                                        else {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'">'+ val.name +'</option>';
                                        }
                                    }

                                    $municipalities.append(option);
                                });

                                if (results.municipal_area) {
                                    var department = $('#' + results.municipal_area.parent).html().trim();
                                    select_department(department);
                                    $('#' + results.municipal_area.parent).attr('selected', 'selected');
                                }
                            }
                        });

                        req.fail(function (res) {
                            console.log('Getting municipalities has failed', res);
                        });
                    }
                }

                function get_communities(parent, community) {
					if (parent) {
                        var req = $.ajax({
                            url: '/get-communities',
                            data: { parent: parent }
                        });

                        req.done(function (results) {
                            console.log('Getting communities successfully: ', results);

                            if (results && results.data) {
                                var first_time = true;
                                $communities.empty();

                                $.each(results.data, function (key,val)
                                {
                                    var option = '';

                                    if (community) {
                                        if (val._id == community) {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'" selected>'+ val.name +'</option>';
											select_community(val.name);
                                        }
                                        else {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'">'+ val.name +'</option>';
                                        }
                                    }
                                    else {
                                        if (first_time) {
                                            first_time = false;
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'" selected>'+ val.name +'</option>';
                                            select_community(val.name);
										}
                                        else {
                                            option = '<option id="'+ val._id +'" data-name="'+ val.name +'" value="'+ val._id +'">'+ val.name +'</option>';
                                        }
                                    }

                                    $communities.append(option);
                                });
                            }
                        });

                        req.fail(function (res) {
                            console.log('Getting communities has failed', res);
                        });	
					}
				}
				
				function select_department(name) {
                    $('#select2-departments-container').attr('title', name);
                    $('#select2-departments-container').html(name);
				}
				
				function select_municipality(name) {
                    $('#select2-municipalities-container').attr('title', name);
                    $('#select2-municipalities-container').html(name);
				}
				
				function select_community(name) {
                    $('#select2-communities-container').attr('title', name);
                    $('#select2-communities-container').html(name);
				}
				
				function select_areas_value(area_id, parent_id) {
					if (areaType === 1) {
                        var department = $('#' + area_id).html().trim();
						select_department(department);
                        $('#' + area_id).attr('selected', 'selected');
                    }
					else if (areaType === 2) {
						get_municipalities(parent_id, area_id);

                        var department = $('#' + parent_id).html().trim();
						if (department) {
							select_department(department);
                            $('#' + parent_id).attr('selected', 'selected');
						}
                    }
					else  if (areaType === 3) {
                        get_communities(parent_id, area_id);
						get_municipality(parent_id);
                    }
				}

                function get_points(indicator, type, area) {
                    if (indicator && type && area) {
                        var req = $.ajax({
                            url: '/get-points',
                            data: { area_type: type, area_id: area, indicator_id: indicator }
                        });

                        req.done(function (results) {
                            console.log('Getting points successfully: ', results);

                            if (results && results.points) {
                                build_points(results.points);
                            }
                        });

                        req.fail(function (res) {
                            console.log('Getting points has failed', res);
                        });
                    }
                }

                function build_points(data_points) {
                    if (data_points && data_points.length > 0) {
                        var points = [];
						
						for (var i = 0; i < data_points.length; i++) {
                            var point = null;
                            var year = '';

                            if (data_points[i].isMonthlyFrequency) {
                                var month = '';

                                switch (parseInt(data_points[i].monthlyFrequency)) {
                                    case 1:
                                        month = 'Enero';
                                        break;
                                    case 2:
                                        month = 'Febrero';
                                        break;
                                    case 3:
                                        month = 'Marzo';
                                        break;
                                    case 4:
                                        month = 'Abril';
                                        break;
                                    case 5:
                                        month = 'Mayo';
                                        break;
                                    case 6:
                                        month = 'Junio';
                                        break;
                                    case 7:
                                        month = 'Julio';
                                        break;
                                    case 8:
                                        month = 'Agosto';
                                        break;
                                    case 9:
                                        month = 'Septiembre';
                                        break;
                                    case 10:
                                        month = 'Octubre';
                                        break;
                                    case 11:
                                        month = 'Noviembre';
                                        break;
                                    case 12:
                                        month = 'Diciembre';
                                        break;
                                }

                                year = month + ' ' + data_points[i].startYear;
                            }
                            else if (data_points[i].isQuarterlyFrequency) {
                                var quarter = '';

                                switch (parseInt(data_points[i].quarterlyFrequency)) {
                                    case 1:
                                        quarter = 'I Trimestre';
                                        break;
