                            $('.indicator-value').html(comparativeValue - Number(points[points.length - 1].value).toPrecision(2));
                            drawGraph(points);
                        }
                        else {
                            $('.indicator-value').html(points[points.length - 1].value);
                            drawGraphOneLine(points);
                        }
                    }
